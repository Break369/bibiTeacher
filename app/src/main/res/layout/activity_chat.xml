<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="5dp">
    <LinearLayout
        android:id="@+id/friendLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <pype.mingming.bibiteacher.ui.CircleImageView
            android:id="@+id/chatLeftImage"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_index_person_student"/>
        <TextView
            android:id="@+id/tvLeftContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你是谁"
            android:textSize="16sp"
            android:background="@drawable/aio_friend_bg_nor_11"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/userLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginRight="2dp"
        >
        <TextView
            android:id="@+id/tvRightContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是你好友DADADADADAADADADADADA"
            android:textSize="16sp"
            android:background="@drawable/aio_user_bg_nor_11"
            android:layout_weight="1"
            />
        <pype.mingming.bibiteacher.ui.CircleImageView
            android:id="@+id/chatRightImage"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_index_person_student" />

    </LinearLayout>


</LinearLayout>
